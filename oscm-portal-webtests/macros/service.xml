        </then>
        <else>
          <setSelectField htmlId="editForm:marketplace" value="@{marketplaceId}" />
        </else>
      </ifStep>
      <clickButton label="${button.save}" />
      <common.verifySuccess label="@{serviceId}" />

      <storeProperty name="expectedSaveState" value="@{expectedSaveState}" />
