    <attribute name="dbuser" />
    <sequential>
      <echo message="Removing user @{dbuser} " />
      <runDbScript failonerror="false">
        \set ON_ERROR_STOP
        DROP ROLE @{dbuser};
      </runDbScript>
    </sequential>
  </macrodef>
  
